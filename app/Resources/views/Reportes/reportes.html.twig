{% extends 'base.html.twig' %}

{% block title %}Reportes especiales{% endblock %}

{% block body %}

    {% if resultado is defined %}
        <div class="alert alert-success" role="alert">Se ha guardado con éxito el archivo: {{ resultado }}</div>
    {% endif %}

    <form method="post">
      <div class="form-group">
        <label for="identificacion">Número de identificación</label>
        <input type="number" class="form-control" id="identificacion" name="identificacion" aria-describedby="identificacionHelp" placeholder="" value="{{ identificacion }}">
        <small id="identificacionHelp" class="form-text text-muted">Ingrese el número de identificación.</small>
      </div>
      <div class="form-group">
        <label for="nombres">Nombres</label>
        <input type="text" class="form-control" id="nombres" name="nombres" aria-describedby="nombresHelp" placeholder="" value="{{ nombres }}">
        <small id="nombresHelp" class="form-text text-muted">Ingrese los nombres de la persona.</small>
      </div>
      <div class="form-group">
        <label for="apellidos">Apellidos</label>
        <input type="text" class="form-control" id="apellidos" name="apellidos" aria-describedby="apellidosHelp" placeholder="" value="{{ apellidos }}">
        <small id="apellidosHelp" class="form-text text-muted">Ingrese los apellidos de la persona.</small>
      </div>
      <div class="form-group">
        <label for="email">Correo electrónico</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="" value="{{ email }}">
        <small id="emailHelp" class="form-text text-muted">Ingrese el correo electrónico de la persona.</small>
      </div>
      <div class="form-group">
        <label for="clave">Contraseña</label>
        <input type="password" class="form-control" id="clave" name="clave" aria-describedby="claveHelp" placeholder="" value="{{ clave }}">
        <small id="claveHelp" class="form-text text-muted">Ingrese la contraseña de la persona.</small>
      </div>
      <div class="form-group">
        <label for="clave">Teléfono</label>
        <input type="tel" class="form-control" id="telefono" name="telefono" aria-describedby="telefonoHelp" placeholder="" value="{{ telefono }}">
        <small id="telefonoHelp" class="form-text text-muted">Ingrese el número telefónico de la persona.</small>
      </div>
      <input type="submit" name="submit" value="Guardar" class="btn btn-primary">
    </form>

{% endblock %}
